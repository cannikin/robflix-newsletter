<div class="poster">
  <a href="<%= ENV['DIRECT_LINK'] %>?key=<%= key %>">
    <img src="<%= ENV['EXTERNAL_HOSTNAME'] %><%= thumb %>?X-Plex-Token=<%= ENV['PLEX_TOKEN'] %>">
  </a>
</div>
<div class="text">
  <h2 class="title">
    <a href="<%= ENV['DIRECT_LINK'] %>?key=<%= key %>">
      <%= title %>
    </a>
  </h2>
  <ul class="meta">
    <li><%= year %></li>
    <li><%= genres.join(', ') %></li>
    <li><%= contentRating %></li>
    <% unless rating.nil? or rating.empty? %>
      <li>
        <% if rating.to_f < 6.0 %>
          <img src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/tomatometer-rotten.png" />
        <% else %>
          <img src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/tomatometer-fresh.png" />
        <% end %>
        <%= (rating.to_f * 10).to_i %>%
      </li>
    <% end %>
    <% unless audienceRating.nil? or audienceRating.empty? %>
      <li>
        <% if audienceRating.to_f < 6.0 %>
          <img src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/aud_score-rotten.png" />
        <% else %>
          <img src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/aud_score-fresh.png" />
        <% end %>
        <%= (audienceRating.to_f * 10).to_i %>%
      </li>
    <% end %>
  </ul>
  <p class="summary"><%= summary %></h2>
</div>
