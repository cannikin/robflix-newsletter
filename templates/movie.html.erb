<table style="width: 100%">
  <tr>
    <td style="width: 100px; vertical-align: top;">
      <a href="<%= ENV['DIRECT_LINK'] %>?key=<%= key %>">
        <img src="<%= ENV['EXTERNAL_HOSTNAME'] %><%= thumb %>?X-Plex-Token=<%= ENV['PLEX_TOKEN'] %>" style="max-width: 100%; box-shadow: 0 1px 6px rgba(0,0,0,0.4);">
      </a>
    </td>
    <td style="padding-left: 1rem; vertical-align: top; border: 1px solid #990000">
      <h2 style="margin: 0; padding: 0; font-weight: 500;">
        <a style="color: #000000; text-decoration: none" href="<%= ENV['DIRECT_LINK'] %>?key=<%= key %>">
          <%= title %>
        </a>
      </h2>
      <ul style="margin: 0.25rem 0; padding: 0; list-style: none; color: #aaaaaa;">
        <li style="display: inline-block; margin-right: 0.5rem; font-size: 80%"><%= year %></li>
        <li style="display: inline-block; margin-right: 0.5rem; font-size: 80%"><%= genres.join(', ') %></li>
        <li style="display: inline-block; background-color: #aaaaaa; font-weight: 500; font-size: 70%; color: #ffffff; padding: 1px 4px; border-radius: 2px; margin: 0 0.5rem;"><%= contentRating %></li>
        <% unless rating.nil? or rating.empty? %>
          <li style="display: inline-block; margin: 0 0.5rem; font-size: 90%">
            <% if rating.to_f < 6.0 %>
              <img style="width: 18px; vertical-align: top;" src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/tomatometer-rotten.png" />
            <% else %>
              <img style="width: 18px; vertical-align: top;" src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/tomatometer-fresh.png" />
            <% end %>
            <%= (rating.to_f * 10).to_i %>%
          </li>
        <% end %>
        <% unless audienceRating.nil? or audienceRating.empty? %>
          <li style="display: inline-block; margin-left: 0.5rem; font-size: 90%">
            <% if audienceRating.to_f < 6.0 %>
              <img style="width: 18px; vertical-align: top;" src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/aud_score-rotten.png" />
            <% else %>
              <img style="width: 20px; vertical-align: top;" src="<%= ENV['PUBLIC_IMAGE_HOSTNAME'] %>/images/aud_score-fresh.png" />
            <% end %>
            <%= (audienceRating.to_f * 10).to_i %>%
          </li>
        <% end %>
      </ul>
      <p style="margin-top: 1rem; font-size: 90%; line-height: 1.4"><%= summary %></h2>
    </td>
  </tr>
</table>
